            GRAFANA_URL_EXTRACTED=""
        fi
    else
        echo "âŒ Failed to send Grafana credential creation command"
        GRAFANA_API_KEY_EXTRACTED="grafana-command-failed"
        GRAFANA_URL_EXTRACTED=""
    fi
else
